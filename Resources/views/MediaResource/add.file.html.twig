{% extends  "InnovaMediaResourceBundle::layout.html.twig" %}

{% block media_resource_content %}  


    <form role="form" enctype="multipart/form-data" id="media_resource_upload"  method="post" action="{{path('media_resource_upload', {'id':resource.id})}}">
        <div class="row">
            <div class="col-md-12 form">
                <div class="form-group">
                    <input class="form-control" type="text" required="required" name="name" value="{{resource.name}}" />
                </div>
                <div class="form-group">                
                    <input type="file" name="file" id="file" value="" required="required" />
                </div>

                <div class="form-group">                
                    <button class="btn btn-default pull-right" type="submit">Sauvegarder</button>
                </div>
            </div>
        </div>
        <!-- hidden fields -->
        <input type="hidden" name="type" value="audio">
    </form>




{% endblock %}

{% block javascripts  %}
    {{parent()}}
    {% javascripts       
        '@InnovaMediaResourceBundle/Resources/public/js/media-upload.js'        
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %} 