{% extends  "InnovaMediaResourceBundle::layout.html.twig" %}

{% block media_resource_content %}
    <div class="row">
        <div class="col-md-12">
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ flashMessage }}
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {% if resources |length > 0 %}
                <table class="table table-striped">                   
                    <tbody>
                        {% for mediaResource in resources %}
                            <tr>
                                <td>
                                    <a href="{{ path('media_resource_details', {'id':mediaResource.id, 'edit':false}) }}" title="Play" class="btn btn-default fa fa-music"></a>

                                </td>
                                <td> <span class="exercise-title">{{ mediaResource.name }}</span></td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <a href="{{ path('media_resource_details', {'id':mediaResource.id, 'edit':true}) }}" title="Edit" class="btn btn-default fa fa-pencil"></a>
                                        <a href="{{ path('media_resource_delete', {'id':mediaResource.id}) }}" data-toggle="modal" data-confirm="Sure?" title="Delete" class="btn btn-danger fa fa-trash-o"></a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <h4 class="text-center">Aucun média segmenté disponnible ! utilisez le bouton + pour en créer un nouveau!</h4>
            {% endif %}
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12 text-center">
            <a href="{{ path('media_resource_add') }}" class="btn btn-default fa fa-plus"></a>
        </div>
    </div>
    <hr/>

    <!-- confirm-modal -->
    <div class="modal fade" id="confirm-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Are you sure ?</h4>
                </div>

                <div class="modal-body text-right">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <a href="#" data-method="POST" id="confirm" class="btn btn-danger danger rest">Supprimer</a>
                </div>
            </div>
        </div>
    </div><!-- /.modal -->
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(document).ready(function () {
            $('a[data-confirm]').click(function (ev) {
                var href = $(this).attr('href');
                $('#confirm').attr('href', href);
                $('#confirm-modal').modal({show: true});
                return false;
            });
        });

        $('#confirm-modal').on('shown.bs.modal', function (e) {
            $(".rest").restfulizer();
        });
    </script>
{% endblock %}
